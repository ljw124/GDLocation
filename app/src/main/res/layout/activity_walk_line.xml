<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.hzcominfo.governtool.model.WalkModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.WalkLineActivity">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:padding="15dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_btn_photo"
            android:text="完成"
            android:textSize="14sp"
            android:textColor="#FFEFBD"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:id="@+id/rl_gps"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_gps_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_finish">
            <TextView
                android:id="@+id/tv_satellite_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="GPS"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_gps"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@mipmap/ic_gps_succ"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0"
            android:textColor="#000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_gps"/>

        <ImageButton
            android:id="@+id/ib_control"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/ll_walk_info"
            app:layout_constraintBottom_toTopOf="@+id/ll_walk_info"/>

        <ImageButton
            android:id="@+id/ib_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_location"
            android:background="@null"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_walk_info"/>

        <LinearLayout
            android:id="@+id/ll_walk_info"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_walk_info_bg"
            app:layout_constraintBottom_toTopOf="@+id/rl_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="时间"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="0:0:0"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="距离(km)"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="0.000"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_tab"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:id="@+id/ll_marker"
                style="@style/item_linear_layout"
                android:layout_alignParentStart="true">
                <ImageView
                    style="@style/item_img"
                    android:src="@mipmap/ic_tag"/>
                <TextView
                    style="@style/item_main_text"
                    android:text="标记"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_voice"
                style="@style/item_linear_layout"
                android:layout_toRightOf="@+id/ll_marker">
                <ImageView
                    style="@style/item_img"
                    android:src="@mipmap/ic_voice"/>
                <TextView
                    style="@style/item_main_text"
                    android:text="语音"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_photo"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_btn_photo"
                android:text="拍照"
                android:textSize="14sp"
                android:textColor="#FFEFBD"
                style="?android:attr/borderlessButtonStyle"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_camera_frame"
            android:layout_width="0.1dp"
            android:layout_height="0.1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>